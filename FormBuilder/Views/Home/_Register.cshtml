@using Ninject.Infrastructure.Language
@model FormBuilder.Models.RegisterModel

@using (Html.BeginForm("JsonRegister", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { Id = "registerForm" }))
{
    @Html.AntiForgeryToken()

    <fieldset>
        <legend>Registration Form</legend>
        <ol>
            <li>
                @Html.LabelFor(m => m.UserName)
                @Html.TextBoxFor(m => m.UserName, new { id = "registerName" })
            </li>
            <li>
                @Html.LabelFor(m => m.Password)
                @Html.PasswordFor(m => m.Password)
            </li>
            <li>
                @Html.LabelFor(m => m.ConfirmPassword)
                @Html.PasswordFor(m => m.ConfirmPassword)
            </li>
            <li>
                @Html.LabelFor(m => m.UserTypeId)
                @Html.DropDownListFor(m => m.UserTypeId, new SelectList(ViewBag.UserTypes, "UserTypeId", "UserTypeName"), "Please select...")
            </li>
            <li>
                <input type="submit" value="Sign up" />
            </li>
        </ol>
        @Html.ValidationSummary()
    </fieldset>
}